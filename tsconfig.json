{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "assets/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "types": ["react-native", "jest"],
    "allowJs": true,
    "skipLibCheck": true,
    "lib": ["ES2015", "DOM", "es2016"]
  },
  "include": ["**/*.ts", "**/*.tsx", "assets/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
