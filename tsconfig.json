{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "assets/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "types": ["react-native", "jest"],
    "allowJs": true,
    "skipLibCheck": true,
    "lib": ["ES2015", "DOM", "es2016"]
  },
  "include": [
    "src/**/*",
    "assets/**/*",
    "*.ts",
    "*.tsx",
    "*.js",
    "*.jsx",
    "**/*.d.ts"
  ],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
